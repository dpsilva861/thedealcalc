{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/calculators",
        "http://localhost:3000/npv-calculator",
        "http://localhost:3000/rental-property-calculator",
        "http://localhost:3000/brrrr-calculator",
        "http://localhost:3000/syndication-calculator",
        "http://localhost:3000/cap-rate-calculator",
        "http://localhost:3000/cash-on-cash-calculator",
        "http://localhost:3000/fix-and-flip-calculator",
        "http://localhost:3000/how-it-works",
        "http://localhost:3000/blog"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.90 }],
        "categories:seo": ["warn", { "minScore": 1.00 }],
        "categories:accessibility": ["warn", { "minScore": 0.95 }],
        "categories:best-practices": ["warn", { "minScore": 0.95 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    }
  }
}
